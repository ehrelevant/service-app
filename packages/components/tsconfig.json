{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleDetection": "auto",
    "moduleResolution": "node",
    "strict": true,
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-native",
    "types": ["nativewind/types"],
    "isolatedModules": true,
    "noEmit": true
  },
  "include": ["src", "nativewind.d.ts"]
}